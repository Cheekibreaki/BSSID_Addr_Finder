<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editTextGridId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Grid ID"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp" />

        <EditText
            android:layout_below="@id/editTextGridId"
            android:id="@+id/editTextBSSID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter BSSID ID"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp" />



        <Button
            android:id="@+id/buttonStartScan"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextBSSID"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="22dp"
            android:text="Start Scan" />

        <Button
            android:id="@+id/buttonExtractDatabase"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/buttonStartScan"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/buttonStartScan"
            android:text="Extract Database" />

        <Button
            android:id="@+id/buttonCheckDatabase"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/buttonStartScan"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="53dp"
            android:text="Check Database" />

        <Button
            android:id="@+id/buttonEraseDatabase"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/buttonExtractDatabase"

            android:layout_marginStart="20dp"
            android:layout_marginTop="53dp"
            android:layout_toEndOf="@id/buttonCheckDatabase"
            android:text="Erase Database" />

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonStartScan"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="63dp">

            <TextView
                android:id="@+id/textViewScanResults"
                android:layout_width="match_parent"
                android:textIsSelectable="true"
                android:layout_height="wrap_content" />
        </ScrollView>

        <com.example.mac_address.ZoomableImageView
            android:id="@+id/zoomableImageView"
            android:layout_width="match_parent"
            android:layout_height="295dp"
            android:layout_below="@id/scrollview"
            android:layout_marginTop="29dp"
            tools:srcCompat="@tools:sample/avatars" />

    </RelativeLayout>



  </androidx.constraintlayout.widget.ConstraintLayout>